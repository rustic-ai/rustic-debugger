{
  "name": "@rustic-debug/backend",
  "version": "0.0.1",
  "description": "Backend API service for Rustic Debug",
  "private": true,
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "test": "vitest",
    "test:contract": "vitest run tests/contract/",
    "test:integration": "vitest run tests/integration/",
    "test:unit": "vitest run tests/unit/",
    "lint": "eslint src tests --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "seed": "tsx scripts/seed-demo-data.ts"
  },
  "dependencies": {
    "@fastify/websocket": "^8.3.1",
    "@rustic-debug/types": "workspace:*",
    "fastify": "^4.25.2",
    "fastify-plugin": "^4.5.1",
    "ioredis": "^5.3.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/ioredis-mock": "^8.2.6",
    "@types/node": "^20.10.6",
    "@types/ws": "^8.18.1",
    "ioredis-mock": "^8.12.1",
    "pino-pretty": "^13.1.1",
    "testcontainers": "^10.4.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.1",
    "ws": "^8.18.3"
  }
}